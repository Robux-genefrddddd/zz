rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isAdmin', false) == true;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - authenticated users only
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Licenses collection - admin only, or user can read their own
    match /licenses/{licenseId} {
      allow read: if isAuth();
      allow write: if isAdmin();
      allow create: if isAuth();
    }
    
    // Conversations collection - user's own conversations
    match /conversations/{conversationId} {
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth();
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }
    
    // Messages collection - user can read/write messages in their own conversations
    match /messages/{messageId} {
      allow read: if isAuth() && exists(/databases/$(database)/documents/conversations/$(resource.data.conversationId)) && get(/databases/$(database)/documents/conversations/$(resource.data.conversationId)).data.userId == request.auth.uid;
      allow create: if isAuth();
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }
    
    // User IPs - users can create, admins can read
    match /user_ips/{docId} {
      allow read: if isAdmin();
      allow create: if isAuth();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // IP Bans - admin only
    match /ip_bans/{banId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // User Bans - admin only with user read access to their own
    match /bans/{banId} {
      allow read: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Maintenance Notices - public read, admin write
    match /maintenance_notices/{noticeId} {
      allow read: if true;
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Settings - admin only
    match /settings/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
